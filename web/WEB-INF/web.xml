<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>army.ArmyListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ArmyServlet</servlet-name>
        <servlet-class>army.ArmyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllServlet</servlet-name>
        <servlet-class>army.AllServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DroidServlet</servlet-name>
        <servlet-class>army.DroidServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RepublicServlet</servlet-name>
        <servlet-class>army.RepublicServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SeperatistServlet</servlet-name>
        <servlet-class>army.SeperatistServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GeneralServlet</servlet-name>
        <servlet-class>army.GeneralServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getImageDetails</servlet-name>
        <servlet-class>army.getImageDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUploadDBServlet</servlet-name>
        <servlet-class>army.FileUploadDBServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditGeneralServlet</servlet-name>
        <servlet-class>army.EditGeneralServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArmyServlet</servlet-name>
        <url-pattern>/ArmyServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllServlet</servlet-name>
        <url-pattern>/AllServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DroidServlet</servlet-name>
        <url-pattern>/DroidServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RepublicServlet</servlet-name>
        <url-pattern>/RepublicServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SeperatistServlet</servlet-name>
        <url-pattern>/SeperatistServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GeneralServlet</servlet-name>
        <url-pattern>/GeneralServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getImageDetails</servlet-name>
        <url-pattern>/getImageDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUploadDBServlet</servlet-name>
        <url-pattern>/FileUploadDBServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditGeneralServlet</servlet-name>
        <url-pattern>/EditGeneralServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
